<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MarginTopCardview">

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:text="Google Nexus 6"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:layout_marginTop="@dimen/MarginTop"
            android:text="Midnigth Blue
Price : $690"
            android:textSize="@dimen/Content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:layout_marginTop="@dimen/MarginTopButton"
            android:background="@color/colorGreen"
            android:text="ADD TO CART"
            android:textColor="@color/colorWhite" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MarginTopCardview"
        app:layout_constraintTop_toBottomOf="@+id/cv1">

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sandisk" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:text="sandisk cruzer blade 16gb flash pendrive"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:layout_marginTop="@dimen/MarginTop"
            android:text="The SanDisk Cruzer Blade 16 GB USB 2.0 Pen Drive
Price : $4.50"
            android:textSize="@dimen/Content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:layout_marginTop="@dimen/MarginTopButton"
            android:background="@color/colorGreen"
            android:text="ADD TO CART"
            android:textColor="@color/colorWhite" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MarginTopCardview"
        app:layout_constraintTop_toBottomOf="@+id/cv2">

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backpack" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:text="kanvas katha backpack"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:layout_marginTop="@dimen/MarginTop"
            android:text="Zippered Pocket at Front, Loop Handle, 1 Compartment
Price : $11.25"
            android:textSize="@dimen/Content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/MarginStart"
            android:layout_marginTop="@dimen/MarginTopButton"
            android:background="@color/colorGreen"
            android:text="ADD TO CART"
            android:textColor="@color/colorWhite" />
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:text="CHECKOUT"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</android.support.constraint.ConstraintLayout>